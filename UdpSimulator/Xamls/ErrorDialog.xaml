<Window x:Class="UdpSimulator.Xamls.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdpSimulator.Xamls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="エラー" Height="150" Width="250"
        FontSize="15"
        Loaded="Window_Loaded"
        ShowActivated="True">
    <StackPanel VerticalAlignment="Center">
        <TextBlock x:Name="ErrorMessage" Text="エラー" HorizontalAlignment="Center" Margin="5,0,5,5" TextAlignment="Center"/>
        <Button x:Name="buttonOK" Content="OK" Width="80" Margin="2" Click="Button_Click"/>
    </StackPanel>
</Window>
